            case "1":
                nombres = iniciar_matriz(5,1,0)
                notas = iniciar_matriz(5,3,0)
                promedios = iniciar_matriz(5,3,0)
                legajos = iniciar_matriz(5,3,0)
                vector_extra = crear_lista(3)

            case "2":
                nombres = cargar_matriz_secuencialmente(nombres)
                for i in range(len(nombres)):
                    for j in range(len(nombres[i])):
                        print(nombres[i][j], end = " | ")


            case "3":
                notas = cargar_matriz_secuencialmente(notas)
                print(notas) #preguntar al profe para CORREGIR EL BUCLE, el "while" principal se mete con el otro while de la funcion
                

            case "4":
                promedios = funcion_promedio(notas)


            case "5":
                pass

            case "6":
                print("saliendo del programa ")
                False
